{
  "name": "feature-hub",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prebuild": "lerna exec --parallel -- rm -rf lib",
    "build": "yarn build:tsc && yarn build:typedoc",
    "build:tsc": "tsc --build packages --verbose",
    "prebuild:typedoc": "rm -rf docs",
    "build:typedoc": "lerna exec --parallel -- typedoc --options ../../typedoc.js --out ../../docs/api/\\$LERNA_PACKAGE_NAME --readme README.md --tsconfig tsconfig.typedoc.json .",
    "postbuild:typedoc": "node scripts/process-api-docs.js",
    "build:watch": "yarn build:tsc --watch --preserveWatchOutput",
    "format": "prettier --write '**/*.{js,json,md,ts,tsx,yml}'",
    "format:verify": "prettier --list-different '**/*.{js,json,md,ts,tsx,yml}'",
    "lint": "lerna exec --parallel -- tslint --config tslint.json --project tsconfig.json --format verbose",
    "test": "jest --verbose"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-angular": "^7.1.2",
    "@commitlint/travis-cli": "^7.2.1",
    "@types/cheerio": "^0.22.9",
    "@types/enzyme": "^3.1.15",
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.9",
    "cheerio": "^1.0.0-rc.2",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "enzyme-to-json": "^3.3.4",
    "fast-glob": "^2.2.4",
    "husky": "^1.1.4",
    "jest": "^23.6.0",
    "lerna": "^3.4.3",
    "prettier": "^1.15.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "ts-config": "^20.7.0",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "typedoc": "^0.13.0",
    "typescript": "^3.1.6"
  }
}
