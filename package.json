{
  "name": "feature-hub",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "scripts": {
    "build": "run-s compile bundle generate-docs",
    "bundle": "lerna run bundle",
    "precompile": "lerna exec --parallel -- rimraf lib",
    "compile": "lerna exec -- tsc --project tsconfig.build.json",
    "format": "prettier --write '**/*.{js,json,md,ts,tsx,yml}'",
    "generate-docs": "lerna exec --scope=\"$SCOPE\" --no-private --parallel -- typedoc --options ../../typedoc.js --out ../../docs/api/\\$LERNA_PACKAGE_NAME --readme README.md --tsconfig tsconfig.build.json .",
    "postgenerate-docs": "node scripts/process-api-docs.js",
    "lint": "lerna exec --parallel -- tslint --config tslint.json --project tsconfig.build.json --format verbose",
    "sort-package-jsons": "sort-package-json package.json packages/*/package.json examples/*/package.json",
    "pretest": "rimraf coverage",
    "test": "jest --verbose",
    "verify": "run-p verify:**",
    "verify:format": "prettier --list-different '**/*.{js,json,md,ts,tsx,yml}'",
    "verify:generate-docs": "git diff --exit-code docs/",
    "verify:install": "git diff --exit-code yarn.lock",
    "verify:sort-package-jsons": "git diff --exit-code package.json packages/*/package.json examples/*/package.json",
    "watch": "run-p watch:**",
    "watch:compile": "yarn compile --watch --preserveWatchOutput",
    "watch:test": "yarn test --watch"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-angular": "^7.1.2",
    "@commitlint/travis-cli": "^7.2.1",
    "@patternplate/cli": "^3.2.0",
    "@patternplate/render-default": "^3.1.1",
    "@types/cheerio": "^0.22.9",
    "@types/enzyme": "^3.1.15",
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.9",
    "cheerio": "^1.0.0-rc.2",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "enzyme-to-json": "^3.3.4",
    "fast-glob": "^2.2.4",
    "husky": "^1.1.4",
    "jest": "^23.6.0",
    "lerna": "^3.5.0",
    "npm-run-all": "^4.1.5",
    "patternplate": "^3.1.1",
    "prettier": "^1.15.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "rimraf": "^2.6.2",
    "sort-package-json": "^1.16.0",
    "ts-config": "^20.7.0",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "typedoc": "^0.13.0",
    "typedoc-plugin-markdown": "^1.1.19",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "@patternplate/render-styled-components": "^3.1.1",
    "yaml-js": "^0.2.3"
  }
}
