{
  "name": "feature-hub",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "precompile": "lerna exec --parallel -- rimraf lib",
    "compile": "lerna exec -- tsc --project tsconfig.cjs.json",
    "compile:esm": "lerna exec --no-private -- tsc --project tsconfig.esm.json",
    "format": "prettier --write '**/*.{js,json,md,ts,tsx,yml}'",
    "generate:api-docs": "typedoc --options typedoc.js .",
    "postgenerate:api-docs": "node scripts/process-api-docs.js",
    "lint": "lerna exec --parallel -- tslint --config tslint.json --project tsconfig.json --format verbose",
    "sort-package-jsons": "sort-package-json package.json packages/*/package.json",
    "pretest": "rimraf coverage",
    "test": "jest --verbose --silent",
    "test:integration": "yarn test --testPathPattern packages/demos",
    "test:unit": "yarn test --testPathIgnorePatterns packages/demos",
    "verify": "run-p verify:**",
    "verify:format": "prettier --list-different '**/*.{js,json,md,ts,tsx,yml}'",
    "verify:install": "git diff --exit-code yarn.lock",
    "verify:size-limit": "lerna exec --no-private --ignore @feature-hub/module-loader-commonjs --parallel -- size-limit",
    "preverify:sort-package-jsons": "yarn sort-package-jsons",
    "verify:sort-package-jsons": "git diff --exit-code package.json packages/*/package.json",
    "watch:compile": "lerna exec --parallel -- tsc --project tsconfig.cjs.json --watch --preserveWatchOutput --pretty",
    "watch:demo": "lerna exec --scope @feature-hub/demos -- ts-node -r tsconfig-paths/register src/watch-demo.ts",
    "watch:test": "yarn test --watch --no-coverage --no-verbose",
    "watch:test:integration": "yarn watch:test --testPathPattern packages/demos",
    "watch:test:unit": "yarn watch:test --testPathIgnorePatterns packages/demos",
    "watch:website": "lerna exec --scope @feature-hub/website -- docusaurus-start"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-angular": "^8.0.0",
    "@commitlint/travis-cli": "^8.0.0",
    "@strictsoftware/typedoc-plugin-monorepo": "^0.2.1",
    "@types/cheerio": "^0.22.9",
    "@types/expect-puppeteer": "^3.3.0",
    "@types/git-rev-sync": "^1.12.0",
    "@types/jest": "^24.0.0",
    "@types/jest-environment-puppeteer": "^4.0.0",
    "@types/node": "^10.12.9",
    "@types/puppeteer": "^1.10.2",
    "@types/react": "^16.7.6",
    "@types/react-dom": "^16.0.11",
    "babel-jest": "^24.0.0",
    "cheerio": "^1.0.0-rc.2",
    "commitlint-azure-pipelines-cli": "^1.0.1",
    "fast-glob": "^3.0.0",
    "git-rev-sync": "^1.12.0",
    "husky": "^3.0.0",
    "jest": "^24.0.0",
    "jest-puppeteer": "^4.0.0",
    "lerna": "^3.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.2",
    "puppeteer": "^1.11.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "rimraf": "^3.0.0",
    "size-limit": "^4.0.0",
    "sort-package-json": "^1.16.0",
    "ts-config": "^20.9.0",
    "tslint": "^5.15.0",
    "typedoc": "^0.15.0",
    "typedoc-plugin-sourcefile-url": "^1.0.4",
    "typescript": "^3.2.4",
    "typescript-tslint-plugin": "^0.5.0"
  }
}
