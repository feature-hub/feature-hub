{
  "extends": "ts-config",
  "linterOptions": {
    "exclude": ["**/lib/**", "**/node_modules/**"]
  },
  "rules": {
    "await-promise": [true, "PromiseLike"],
    "no-default-export": false,
    "no-null-undefined-union": false,
    "no-submodule-imports": [true, "lit-html", "react-dom", "systemjs"],
    "prefer-method-signature": false
  }
}
